{
   "compilerOptions": {
     "baseUrl": ".",
     "paths": {
      "~/*": ["src/*"]
     },
     "pretty": true,
     "strict": true,
     "esModuleInterop": true,
     "sourceMap": true,
     "noImplicitAny": false,
     "target": "es6",
     "moduleResolution": "node",
     "lib": ["es6", "es2015", "es2017", "esnext", "dom"],
     "typeRoots": [ "./node_modules/@types", "./src" ],
     "types": [ "jest" ],
     "allowJs": true,
     "checkJs": true
   },
   "include": ["./src/**/*.ts"],
   "exclude": ["src/__tests__"]
 }
